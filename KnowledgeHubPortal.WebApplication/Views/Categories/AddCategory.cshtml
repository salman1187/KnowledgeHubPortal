@model KnowledgeHubPortal.WebApplication.Models.Domain.Category


<div class="container mt-5">
    <h3 class="text-center">Add New Category</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="@Url.Action("AddCategory", "Categories")">
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input type="text" id="Name" name="CategoryName" class="form-control" />
                </div>

                <div class="form-group mt-3">
                    <label for="Description" class="control-label">Description</label>
                    <textarea id="Description" name="CategoryDescription" class="form-control"></textarea>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

