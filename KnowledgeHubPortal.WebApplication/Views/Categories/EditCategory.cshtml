@model KnowledgeHubPortal.WebApplication.Models.Domain.Category

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="container mt-5">
    <h3 class="text-center">Add New Category</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="@Url.Action("EditCategory", "Categories")">
                @Html.HiddenFor(model => model.CategoryID)
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "control-label form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName)
                </div>

                <div class="form-group mt-3">
                    <label for="Description" class="control-label">Description</label>
                    @Html.TextAreaFor(model => model.CategoryDescription, new { @class = "control-label form-control", rows = 6, cols = 50 })
                    @Html.ValidationMessageFor(model => model.CategoryDescription)
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Edit" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

