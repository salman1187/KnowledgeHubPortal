@model KnowledgeHubPortal.WebApplication.Models.Domain.Category

<div class="container mt-5">
    <h3 class="text-center">Delete Category</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <p>Are you sure you want to delete the category <strong>@Model.CategoryName</strong>?</p>
            <form method="post" action="@Url.Action("DeleteCategory", "Categories")">
                @Html.HiddenFor(model => model.CategoryID)

                <div class="form-group mt-3">
                    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">No, Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
