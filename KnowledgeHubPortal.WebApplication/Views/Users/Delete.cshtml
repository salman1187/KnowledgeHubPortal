@model KnowledgeHubPortal.WebApplication.Models.ApplicationUser
@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <h3 class="text-center">Delete Category</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <p>Are you sure you want to delete the user <strong>@Model.Email</strong>?</p>
            <form method="post" action="@Url.Action("Delete", "Users")">
                @Html.HiddenFor(model => model.Id)

                <div class="form-group mt-3">
                    <input type="submit" value="Yes, Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">No, Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
