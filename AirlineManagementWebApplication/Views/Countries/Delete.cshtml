@model AirlineManagementWebApplication.Models.Domain.Entities.Country
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Country</h2>



<form method="post" action="@Url.Action("Delete", "Countries")">
    @Html.HiddenFor(model => model.CountryId)
    <p>Are you sure you want to delete <strong>@Model.CountryName</strong> ?</p>
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a href="@Url.Action("Index", "Countries")" class="btn btn-secondary">No, cancel</a>
</form>
